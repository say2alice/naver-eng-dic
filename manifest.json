{
  "manifest_version": 3,
  "name": "English Korean Dictionary",
  "version": "1.1.1",
  "description": "찾고 싶은 단어를 간단히 클릭(Alt+Click)하여 네이버 영한사전을 이용할 수 있습니다.",
  "icons": {
    "32": "icons/icon.png",
    "64": "icons/icon@64.png",
    "128": "icons/icon@128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "config.js",
        "handler.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["dict.html"]
    }
  ],
  "action": {
    "browser_style": true,
    "default_icon": "icons/icon@64.png",
    "default_title": "English Korean Dictionary(영한사전)",
    "default_area": "navbar"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "commands": {
    "toggle-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "모드를 전환합니다"
    }
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://en.dict.naver.com/*",
    "*://dic.naver.com/*"
  ]
}
